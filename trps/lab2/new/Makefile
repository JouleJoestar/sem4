CXX       := g++
CXX_FLAGS := -Wall -Wextra -std=c++17 -ggdb

BIN       := bin
LIBRARIES := 
EXECUTABLE := main

SOURCES := $(wildcard *.c)
HEADERS  := $(wildcard *.h)

all: $(BIN)/$(EXECUTABLE)

run: clean all
	@echo "ðŸš€ Executing..."
	./$(BIN)/$(EXECUTABLE)

$(BIN)/$(EXECUTABLE): $(SOURCES) $(HEADERS) | $(BIN)
	@echo "ðŸš§ Building..."
	$(CXX) $(CXX_FLAGS) $^ -o $@ $(LIBRARIES)

$(BIN):
	mkdir -p $(BIN)

clean:
	@echo "ðŸ§¹ Clearing..."
	-rm -rf $(BIN)/*
